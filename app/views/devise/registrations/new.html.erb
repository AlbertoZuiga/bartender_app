<div class="login-box">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login-form"}) do |f| %>
    <div class="user-box">
      <%= f.text_field :first_name, autofocus: true, required: true %>
      <%= f.label :first_name %>
    </div>
    <div class="user-box">
      <%= f.text_field :last_name, required: true %>
      <%= f.label :last_name %>
    </div>
    <div class="user-box">
      <%= f.email_field :email, autocomplete: "email", required: true %>
      <%= f.label :email %>
    </div>
    <div class="user-box">
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
      <%= f.label :password %>
    </div>
    <div class="user-box">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
      <%= f.label :password_confirmation %>
    </div>
    <div class="text-center">
      <div class="sign-in-submit">
        <%= f.submit "SIGN UP", class:"no-style" %>
        <span class="span-class"></span>
      </div>
    </div> 
  <% end %>
</div>