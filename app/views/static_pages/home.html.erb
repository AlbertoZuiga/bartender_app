<div class="container">
  <h1 class="mt-4">Esto es la p√°gina de inicio</h1>

  <h5 class="mt-4">Ingredients:</h5>
  <div class="row">
    <% @ingredients.each do |item| %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="form-check">
          <input type="checkbox" class="form-check-input item-checkbox mb-5" data-id="<%= item.id %>" onchange="findRecipes(<%= item.id %>)">
          <label class="form-check-label"><%= item.name %></label>
        </div>
      </div>
    <% end %>
  </div>

  <div id="make_recipes"></div>
</div>