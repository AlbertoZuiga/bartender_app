<div class="container">
  <h1 class="mt-4">Select your current ingredients:</h1>
  <div class="row">
    <% @ingredients.each do |ingredient| %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="form-check">
          <input type="checkbox" class="form-check-input mb-5" id="ingredient-checkbox-<%= ingredient.id %>" onchange="findRecipes(<%= ingredient.id %>)" <%= current_user.ingredients.include?(ingredient) ? 'checked' : '' %> >
          <label class="form-check-label"><%= ingredient.name %></label>
        </div>
      </div>
    <% end %>
  </div>

  <div id="make_recipes"></div>
</div>