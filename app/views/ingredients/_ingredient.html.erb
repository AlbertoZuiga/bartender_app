<div class="col-md-4 mb-4">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to ingredient.name, ingredient_path(ingredient) %></h5>
      
      <% if action_name == "index" %>
        <%= link_to "DELETE", ingredient, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this ingredient?"}, class: "btn btn-danger" %>
      <% else %>
        <%= link_to 'REMOVE', remove_recipe_ingredient_path(@recipe, ingredient), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this ingredient from the recipe?' }, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
