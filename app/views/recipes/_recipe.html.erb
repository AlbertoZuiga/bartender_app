<div class="col-md-4 mb-4">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to recipe.name, recipe_path(recipe) %></h5>
      <p class="card-text"><%= recipe.description %></p>
      <p class="card-text"><%= recipe.instruction %></p>
    </div>
      <%= link_to "DELETE", recipe, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this recipe?"}, class: "btn btn-danger" %>
  </div>
</div>
